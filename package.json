{
  "name": "nest-sample1",
  "version": "1.0.0",
  "description": "Kenry",
  "author": "tuanpt1702@gmail.com",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "watch:build": "tsc --watch",
    "watch:server": "NODE_ENV=Development SINGLE_THREAD=true nodemon './dist/server.js' --watch './dist'",
    "watch": "npm-run-all --parallel build watch:build watch:server --print-label",
    "start": "NODE_ENV=Development SINGLE_THREAD=true ts-node -r tsconfig-paths/register src/server.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "NODE_ENV=Development SINGLE_THREAD=true node dist/server.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "generate": "plop --plopfile src/resources/generates/index.js",
    "start:webpack": "SINGLE_THREAD=true node build/server.js",
    "webpack": "rimraf build && webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/typeorm": "^5.2.2",
    "compression": "^1.7.3",
    "pg": "^7.7.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "typeorm": "^0.2.9",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "aluha-ezcode-helper": "^1.1.4",
    "fs-extra": "^7.0.1",
    "jest": "^23.5.0",
    "jsonwebtoken": "^8.4.0",
    "node-plop": "^0.16.0",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.5",
    "plop": "^2.1.0",
    "prettier": "^1.14.2",
    "rxjs-compat": "^6.3.3",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "webpack": "^4.27.0",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
